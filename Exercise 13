#how much more (or less) profit is that?

df_most_disc = df.filter(df["Discount"].isin(most_lost_disc))
df_new = df.subtract(df_most_disc)
new_profit = df_new.agg(F.round(F.sum("Profit"), 2)).withColumnRenamed("round(sum(Profit), 2)", "New_Profit")
old_profit = df.agg(F.round(F.sum("Profit"), 2)).withColumnRenamed("round(sum(Profit), 2)", "Old_Profit")

difference_profit = new_profit.join(old_profit).withColumn("Difference in Profit", new_profit.New_Profit-old_profit.Old_Profit)
difference_profit.show()
